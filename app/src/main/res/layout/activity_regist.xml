<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@android:color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.RegistActivity">


    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="200dp"
                app:lottie_loop="true"
                app:lottie_autoPlay="true"
                app:lottie_rawRes="@raw/logo_animate"
                android:layout_height="200dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primary"
                android:fontFamily="@font/poppins_bold"
                android:text="Personality Test"
                android:textSize="18sp" />

            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primary"
                android:fontFamily="@font/poppins"
                android:text="Silahkan isi data berikut"
                android:textSize="14sp" />

            <com.google.android.material.textfield.TextInputLayout
                app:boxCornerRadiusBottomEnd="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusTopEnd="10dp"
                app:boxCornerRadiusTopStart="10dp"
                app:startIconTint="@color/primary"
                app:startIconDrawable="@drawable/ic_baseline_email_24"
                android:layout_width="300dp"
                android:hint="Email Address"
                app:hintEnabled="true"
                android:textColorHint="@color/primary_variant"
                android:layout_marginTop="20dp"
                app:endIconMode="clear_text"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="@color/primary"
                app:endIconTint="@color/primary"
                app:hintTextColor="@color/primary"
                android:backgroundTint="@color/primary"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:textColor="@color/primary"
                    android:id="@+id/et_email"
                    android:inputType="textEmailAddress"
                    android:backgroundTint="@color/primary"
                    android:layout_height="wrap_content"/>

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                app:boxCornerRadiusBottomEnd="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusTopEnd="10dp"
                app:boxCornerRadiusTopStart="10dp"
                app:startIconTint="@color/primary"
                app:startIconDrawable="@drawable/ic_baseline_account_circle_24"
                android:layout_width="300dp"
                android:hint="Username"
                app:hintEnabled="true"
                android:textColorHint="@color/primary_variant"
                android:layout_marginTop="5dp"
                app:endIconMode="clear_text"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="@color/primary"
                app:endIconTint="@color/primary"
                app:hintTextColor="@color/primary"
                android:backgroundTint="@color/primary"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:textColor="@color/primary"
                    android:inputType="textPersonName"
                    android:id="@+id/et_username"
                    android:backgroundTint="@color/primary"
                    android:layout_height="wrap_content"/>

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                app:boxCornerRadiusBottomEnd="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusTopEnd="10dp"
                app:boxCornerRadiusTopStart="10dp"
                app:startIconTint="@color/primary"
                app:startIconDrawable="@drawable/ic_baseline_school_24"
                android:layout_width="300dp"
                android:hint="NPM"
                app:hintEnabled="true"
                android:textColorHint="@color/primary_variant"
                android:layout_marginTop="5dp"
                app:endIconMode="clear_text"
                app:boxBackgroundMode="outline"
                app:counterMaxLength="15"
                app:counterEnabled="true"
                app:counterTextColor="@color/primary"
                app:boxStrokeColor="@color/primary"
                app:endIconTint="@color/primary"
                app:hintTextColor="@color/primary"
                android:backgroundTint="@color/primary"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:textColor="@color/primary"
                    android:inputType="number"
                    android:id="@+id/et_npm"
                    android:backgroundTint="@color/primary"
                    android:layout_height="wrap_content"/>

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                app:boxCornerRadiusBottomEnd="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusTopEnd="10dp"
                app:boxCornerRadiusTopStart="10dp"
                app:startIconTint="@color/primary"
                app:startIconDrawable="@drawable/ic_baseline_local_library_24"
                android:layout_width="300dp"
                android:hint="Angkatan"
                app:hintEnabled="true"
                android:textColorHint="@color/primary_variant"
                android:layout_marginTop="5dp"
                app:endIconMode="clear_text"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="@color/primary"
                app:endIconTint="@color/primary"
                app:hintTextColor="@color/primary"
                android:backgroundTint="@color/primary"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:textColor="@color/primary"
                    android:inputType="date"
                    android:id="@+id/et_angkatan"
                    android:backgroundTint="@color/primary"
                    android:layout_height="wrap_content"/>

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                app:boxCornerRadiusBottomEnd="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusTopEnd="10dp"
                app:boxCornerRadiusTopStart="10dp"
                app:startIconTint="@color/primary"
                app:startIconDrawable="@drawable/ic_baseline_av_timer_24"
                android:layout_width="300dp"
                android:hint="Umur"
                app:hintEnabled="true"
                android:textColorHint="@color/primary_variant"
                android:layout_marginTop="5dp"
                app:endIconMode="clear_text"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="@color/primary"
                app:endIconTint="@color/primary"
                app:hintTextColor="@color/primary"
                android:backgroundTint="@color/primary"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:textColor="@color/primary"
                    android:inputType="number"
                    android:id="@+id/et_umur"
                    android:backgroundTint="@color/primary"
                    android:layout_height="wrap_content"/>

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                app:boxCornerRadiusBottomEnd="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusTopEnd="10dp"
                app:boxCornerRadiusTopStart="10dp"
                app:startIconTint="@color/primary"
                app:startIconDrawable="@drawable/ic_baseline_favorite_24"
                android:layout_width="300dp"
                android:hint="Gender"
                app:hintEnabled="true"
                app:boxBackgroundColor="@android:color/white"
                android:textColorHint="@color/primary_variant"
                android:layout_marginTop="5dp"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="@color/primary"
                app:endIconTint="@color/primary"
                app:hintTextColor="@color/primary"
                android:backgroundTint="@color/primary"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_height="wrap_content">

                <AutoCompleteTextView
                    android:textColor="@color/primary"
                    android:id="@+id/autoComplete"
                    android:inputType="none"
                    android:backgroundTint="@android:color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                app:boxCornerRadiusBottomEnd="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusTopEnd="10dp"
                app:boxCornerRadiusTopStart="10dp"
                app:startIconDrawable="@drawable/ic_baseline_lock_24"
                app:startIconTint="@color/primary"
                android:layout_width="300dp"
                android:hint="Password"
                app:hintEnabled="true"
                app:counterMaxLength="8"
                app:counterEnabled="true"
                app:counterTextColor="@color/primary"
                android:textColorHint="@color/primary_variant"
                app:hintTextColor="@color/primary"
                android:backgroundTint="@color/primary"
                app:boxStrokeColor="@color/primary"
                app:endIconTint="@color/primary"
                app:endIconMode="password_toggle"
                android:layout_marginTop="5dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:inputType="textPassword"
                    android:id="@+id/et_password"
                    android:textColor="@color/primary"
                    android:layout_height="wrap_content"/>

            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:background="@drawable/button_primary"
                android:fontFamily="@font/poppins_bold"
                android:text="SIGN UP"
                android:id="@+id/btn_regist"
                android:textColor="@android:color/white"
                android:layout_marginTop="40dp"
                android:layout_width="300dp"
                android:layout_height="60dp"/>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:fontFamily="@font/poppins"
                    android:textColor="@color/primary"
                    android:text="Sudah punya akun?"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_marginStart="4dp"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="@color/primary"
                    android:text="Sign In"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>



    </ScrollView>

</RelativeLayout>