<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:scrollbars="none"
    android:background="@android:color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.EditProfileActivity">

    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:background="@color/primary"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">

            <ImageView
                android:onClick="back"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:src="@drawable/ic_baseline_arrow_back_ios_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:fontFamily="@font/poppins_bold"
                android:textSize="14sp"
                android:layout_centerVertical="true"
                android:textColor="@color/white"
                android:layout_centerHorizontal="true"
                android:text="Edit Profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

        <RelativeLayout
            android:background="@color/primary"
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="80dp"
                app:civ_border_width="2dp"
                android:scaleType="centerCrop"
                app:civ_border_color="@android:color/white"
                android:src="@drawable/profile2"
                android:layout_centerInParent="true"
                android:layout_height="80dp"/>

        </RelativeLayout>

        <com.google.android.material.textfield.TextInputLayout
            app:boxCornerRadiusBottomEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxCornerRadiusTopStart="10dp"
            app:startIconTint="@color/primary"
            app:startIconDrawable="@drawable/ic_baseline_email_24"
            android:layout_width="300dp"
            android:hint="Email Address"
            app:hintEnabled="true"
            android:textColorHint="@color/primary_variant"
            android:layout_marginTop="20dp"
            app:endIconMode="clear_text"
            app:boxBackgroundMode="outline"
            android:enabled="false"
            app:boxStrokeColor="@color/primary"
            app:endIconTint="@color/primary"
            app:hintTextColor="@color/primary"
            android:backgroundTint="@color/primary"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:textColor="@color/primary"
                android:id="@+id/et_email"
                android:inputType="textEmailAddress"
                android:backgroundTint="@color/primary"
                android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            app:boxCornerRadiusBottomEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxCornerRadiusTopStart="10dp"
            app:startIconTint="@color/primary"
            app:startIconDrawable="@drawable/ic_baseline_account_circle_24"
            android:layout_width="300dp"
            android:hint="Username"
            app:hintEnabled="true"
            android:textColorHint="@color/primary_variant"
            android:layout_marginTop="5dp"
            app:endIconMode="clear_text"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="@color/primary"
            app:endIconTint="@color/primary"
            app:hintTextColor="@color/primary"
            android:backgroundTint="@color/primary"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:textColor="@color/primary"
                android:inputType="textPersonName"
                android:id="@+id/et_username"
                android:backgroundTint="@color/primary"
                android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            app:boxCornerRadiusBottomEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxCornerRadiusTopStart="10dp"
            app:startIconTint="@color/primary"
            app:startIconDrawable="@drawable/ic_baseline_school_24"
            android:layout_width="300dp"
            android:hint="NPM"
            app:hintEnabled="true"
            android:textColorHint="@color/primary_variant"
            android:layout_marginTop="5dp"
            app:endIconMode="clear_text"
            app:boxBackgroundMode="outline"
            app:counterMaxLength="15"
            app:counterEnabled="true"
            app:counterTextColor="@color/primary"
            app:boxStrokeColor="@color/primary"
            app:endIconTint="@color/primary"
            app:hintTextColor="@color/primary"
            android:backgroundTint="@color/primary"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:textColor="@color/primary"
                android:inputType="number"
                android:id="@+id/et_npm"
                android:backgroundTint="@color/primary"
                android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            app:boxCornerRadiusBottomEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxCornerRadiusTopStart="10dp"
            app:startIconTint="@color/primary"
            app:startIconDrawable="@drawable/ic_baseline_local_library_24"
            android:layout_width="300dp"
            android:hint="Angkatan"
            app:hintEnabled="true"
            android:textColorHint="@color/primary_variant"
            android:layout_marginTop="5dp"
            app:endIconMode="clear_text"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="@color/primary"
            app:endIconTint="@color/primary"
            app:hintTextColor="@color/primary"
            android:backgroundTint="@color/primary"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:textColor="@color/primary"
                android:inputType="date"
                android:id="@+id/et_angkatan"
                android:backgroundTint="@color/primary"
                android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            app:boxCornerRadiusBottomEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxCornerRadiusTopStart="10dp"
            app:startIconTint="@color/primary"
            app:startIconDrawable="@drawable/ic_baseline_av_timer_24"
            android:layout_width="300dp"
            android:hint="Umur"
            app:hintEnabled="true"
            android:textColorHint="@color/primary_variant"
            android:layout_marginTop="5dp"
            app:endIconMode="clear_text"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="@color/primary"
            app:endIconTint="@color/primary"
            app:hintTextColor="@color/primary"
            android:backgroundTint="@color/primary"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:textColor="@color/primary"
                android:inputType="number"
                android:id="@+id/et_umur"
                android:backgroundTint="@color/primary"
                android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>


        <TextView
            android:textColor="@color/primary"
            android:layout_marginTop="15dp"
            android:text="Lihat Tipe Kepribadian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:background="@drawable/button_primary"
            android:fontFamily="@font/poppins_bold"
            android:text="Simpan"
            android:id="@+id/btn_simpan"
            android:textColor="@android:color/white"
            android:layout_marginTop="30dp"
            android:layout_width="300dp"
            android:layout_height="60dp"/>

    </LinearLayout>

</ScrollView>